<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".inAPPBrowser.InAppBrowserActivity">

    <com.example.deeplinkdemo.custumView.ScrollWebView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/webview"/>
    <LinearLayout
            android:id="@+id/ll_bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorPrimary"
            android:orientation="horizontal"
            android:paddingLeft="41dp"
            android:paddingTop="9dp"
            android:paddingRight="41dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent">
        <ImageView
                android:id="@+id/img_back_gray"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@mipmap/ic_browser_left_gray"/>
        <ImageView
                android:id="@+id/img_back_blue"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@mipmap/ic_browser_left_blue"
                android:visibility="gone"/>
        <TextView
                android:id="@+id/text_progress"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        <ImageView
                android:id="@+id/img_forward_gray"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@mipmap/ic_browser_right_gray"/>
        <ImageView
                android:id="@+id/img_forward_blue"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@mipmap/ic_browser_right_blue"
                android:visibility="gone"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>